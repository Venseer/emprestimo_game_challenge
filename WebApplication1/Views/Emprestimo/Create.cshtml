@model WebApplication1.Models.Emprestimo

@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="None" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amigo_Emprestimo" class="control-label">Amigo</label>
                <select asp-for="Amigo_Emprestimo" class="form-control">
                    <option value="">Select...</option>
                    @foreach (Amigo j in ViewBag.ListaAmigos)
                    {
                        <option value="@j.Id">@Html.DisplayName(j.Nome)</option>

                    }
                </select>
                <span asp-validation-for="Amigo_Emprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogo_Emprestimo" class="control-label">Jogo</label>
                <select asp-for="Jogo_Emprestimo" class="form-control">
                    <option value="">Select...</option>
                    @foreach (Jogo j in ViewBag.ListaJogos)
                    {
                        <option value="@j.Id">@Html.DisplayName(j.Nome)</option>

                    }
                </select>
                <span asp-validation-for="Jogo_Emprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHoraEmprestimo" class="control-label">Data Emprestimo</label>
                <input asp-for="DataHoraEmprestimo" class="form-control" />
                <span asp-validation-for="DataHoraEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.css" asp-append-version="true" />
    <script>
        $('#DataHoraEmprestimo').datepicker();
    </script>
}