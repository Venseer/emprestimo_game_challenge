@model WebApplication1.Models.Jogo

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Jogo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        @if (Model.IsEmprestado)
        {
            <dt>
                Data de Emprestimo
            </dt>
            <dd>
                @Html.DisplayName(Model.Emprestimo_Atual.DataHoraEmprestimo.ToString("dd-MM-yyyy"))
            </dd>
        }
    </dl>

    @if (Model.IsEmprestado)
    {
        <p>Observação: Ao deletar este usuário, você removerá todos os emprestimos vinculados com esse registro.</p>
    }


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
