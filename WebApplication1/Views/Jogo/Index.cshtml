@model IEnumerable<WebApplication1.Models.Jogo>

@{
    ViewData["Title"] = "Lista Jogos";
}

<h2>View</h2>

<p>
    <a asp-action="Create">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Emprestado
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @if (item.IsEmprestado)
                    {
                        <span class="glyphicon glyphicon-ok-circle"></span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
